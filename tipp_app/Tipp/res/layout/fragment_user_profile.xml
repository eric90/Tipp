<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:src="@drawable/com_facebook_logo"
            android:padding="10dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/imageView1"
            android:gravity="center"
            android:text="Yo APP"
            android:textColor="#0D134E"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="18dp"
            android:ems="10"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="TESTTEST" 
            android:textColor="#0D134E"/>
        
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="237dp"
        android:orientation="vertical" >
        
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >
        
        <TextView
            android:id="@+id/gR"
            android:layout_width="0dp"
			android:layout_weight="1.00"
            android:layout_height="match_parent"
            android:layout_marginTop="18dp"
            android:background="@drawable/textlines"
            android:ems="10"
            android:paddingTop="5dp"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:text="Group Name"
            android:textColor="#0D134E"
            android:textSize="20dp"
            android:gravity="left" />

        <TextView
            android:id="@+id/Group"
            android:layout_width="0dp"
			android:layout_weight="1.00"
            android:layout_height="match_parent"
            android:layout_marginTop="18dp"
 			android:paddingTop="5dp"
            android:paddingBottom="8dp"
            android:ems="10"
            android:gravity="left"
            android:paddingLeft="17dp"
            android:text="Group Rating"
            android:textColor="#0D134E"
            android:textSize="20dp"
            android:background="@drawable/textlines" />

		</LinearLayout>
    
        <ListView
            android:id="@android:id/list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1.59"
            android:divider="#b1689f"
            android:dividerHeight="1dp"
            android:fastScrollEnabled="true"
            android:paddingLeft="4dp"
            android:scrollbarSize="2dp"
            android:scrollbarStyle="outsideInset"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="0.09"
        android:orientation="vertical" >

    <com.facebook.widget.LoginButton
        android:id="@+id/authButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_share"
        android:layout_marginLeft="34dp"
        android:layout_toRightOf="@+id/button_share"
        android:paddingTop="13dp" />

    <ImageButton
        android:id="@+id/button_share"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="44dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/fbicon" />
    <com.facebook.widget.LikeView
         android:id="@+id/like_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/authButton">
	</com.facebook.widget.LikeView>

    </RelativeLayout>
    
</LinearLayout>